<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruoyi.project.mhxy.fairy.mapper.ArticleMapper">


    <insert id="addArticle" parameterType="com.ruoyi.project.mhxy.fairy.bean.ArticleVO" useGeneratedKeys="true" keyProperty="id">
        insert into article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="version != null">
                version,
            </if>
            <if test="author != null">
                author,
            </if>
            <if test="coverImage != null">
                cover_image,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="clicks != null">
                clicks,
            </if>
            <if test="replyNumber != null">
                reply_number,
            </if>
            <if test="articleType != null">
                article_type,
            </if>
            <if test="html != null ">
                html,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="version != null">
                #{version,jdbcType=INTEGER},
            </if>
            <if test="author != null">
                #{author,jdbcType=VARCHAR},
            </if>
            <if test="coverImage != null">
                #{coverImage,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="clicks != null">
                #{clicks,jdbcType=INTEGER},
            </if>
            <if test="replyNumber != null">
                #{replyNumber,jdbcType=INTEGER},
            </if>
            <if test="articleType != null">
                #{articleType,jdbcType=VARCHAR},
            </if>
            <if test="html != null">
                #{html,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="getArticleList" resultType="com.ruoyi.project.mhxy.fairy.bean.ArticleVO" parameterType="com.ruoyi.project.mhxy.fairy.bean.ArticleVO">
    SELECT *,
    date_format(`create_time`,'%Y-%m-%d %H:%i:%s') AS `createTime`,
    date_format(`update_time`,'%Y-%m-%d %H:%i:%s') AS `updateTime`,
    cover_image AS coverImage,
    reply_number AS replyNumber,
    article_type AS articleType
    FROM article
    <if test="id != null">
        WHERE id = #{id}
    </if>
    <if test="null != title and !title.equals('')">
        WHERE title LIKE CONCAT('%',#{title},'%')
    </if>
  </select>

    <update id="updateArticle" parameterType="com.ruoyi.project.mhxy.fairy.bean.ArticleVO">
        update article
        <trim prefix="set" suffixOverrides=",">
            <if test="version!=null">
                version=#{version},
            </if>
            <if test="content != null and !content.equals('')">
                content=#{content},
            </if>
            <if test="title != null and !title.equals('')">
                title=#{title},
            </if>
            <if test="clicks != null and !clicks.equals('')">
                clicks=#{clicks},
            </if>
            <if test="articleType != null and !articleType.equals('')">
                article_type=#{articleType},
            </if>
            <if test="html != null and !html.equals('')">
                html=#{html},
            </if>
        </trim>
        where id=#{id}
    </update>

    <delete id="deleteArticle" parameterType="com.ruoyi.project.mhxy.fairy.bean.ArticleVO">
        DELETE FROM article WHERE id=#{id}
    </delete>
</mapper>